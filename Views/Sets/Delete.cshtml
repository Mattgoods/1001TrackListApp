@model _1001.DjSet

@{
    ViewData["Title"] = "Delete Set";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Set</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <strong>Warning!</strong> Are you sure you want to delete this set? This action cannot be undone.
                    </div>
                    
                    <div class="mb-3">
                        <h4>@Model.Title</h4>
                        <p class="text-muted">by @Model.Artist.DisplayName</p>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-3">Date</dt>
                        <dd class="col-sm-9">@(Model.SetDatetime?.ToString("D") ?? "Unknown Date")</dd>
                        
                        <dt class="col-sm-3">Venue</dt>
                        <dd class="col-sm-9">@(Model.Venue?.Name ?? "Unknown Venue")</dd>
                        
                        <dt class="col-sm-3">Tickets Sold</dt>
                        <dd class="col-sm-9">@(Model.SetAnalytics?.TicketsSold?.ToString("N0") ?? "0")</dd>
                    </dl>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="DjSetId" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.DjSetId" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
